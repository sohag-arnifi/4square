generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  super_admin
  admin
  user
}

model User {
  id       String @id @default(uuid())
  username String @unique @db.VarChar(255)
  password String
  role     Role

  fullName  String?
  email     String?
  phone     String?
  isActive  Boolean   @default(true)
  lastVisit DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Company {
  id               String  @id @default(uuid())
  companyName      String  @unique @db.VarChar(255)
  address          String
  email            String
  phone            String
  startDate        String
  emergencyContact String?
  license          String?
  binNumber        String?

  totalInvest Float?
  totalProfit Float?

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("company")
}

model Investor {
  id       String @id @default(uuid())
  fullName String
  phone    String
  email    String

  invest Float? @default(0)
  profit Float? @default(0)

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("investors")
}
